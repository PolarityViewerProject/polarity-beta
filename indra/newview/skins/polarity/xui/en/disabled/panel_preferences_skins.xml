<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="false"
 follows="all"
 height="440"
 layout="topleft"
 left="1"
 top="1"
 min_height="700"
 width="540"
 label="Skins"
 name="skin_panel">

	<button
	 scale_image="true"
	 display_pressed_state="false"
	 hover_glow_amount="0.0"
	 left="30"
	 top="5"
	 follows="left|top"
	 layout="topleft"
	 width="458"
	 height="325"
	 name="skin_preview"
	 image_selected="Blank"
	 image_unselected="Blank" />

	<text
	 type="string"
	 length="1"
	 follows="left|top"
	 height="15"
	 layout="topleft"
	 left="30"
	 name="skin_textbox"
	 top_pad="15"
	 width="90">
		Skin:
	</text>
	<combo_box
	 follows="left|top"
	 height="23"
	 layout="topleft"
	 left_pad="0"
	 top_delta="-5"
	 max_chars="135"
	 name="skin_combobox"
	 width="150">
	 <combo_box.item
	 	label="Placeholder">
	 </combo_box.item>
	 
	</combo_box>
  <text
	 type="string"
	 length="1"
	 follows="left|top"
	 height="15"
	 layout="topleft"
	 left="300"
	 top_delta="5"
	 name="theme_textbox"
	 width="50">
		Variant:
	</text>
	<combo_box
	 follows="left|top"
	 height="23"
	 layout="topleft"
	 left_pad="0"
	 top_delta="-5"
	 label="Theme Placeholder"
	 name="theme_combobox"
	 width="150">
	</combo_box>
  <text
	 type="string"
	 length="1"
	 follows="left|top"
	 height="15"
	 layout="topleft"
	 left="30"
	 top_pad="10"
	 name="color_scheme_textbox"
	 width="90">
	Color Scheme:
	</text>
	<combo_box
	 control_name="PVUI_ThemeColorSelection"
	 follows="left|top"
	 height="23"
	 layout="topleft"
	 left_pad="0"
	 top_delta="-5"
	 name="color_scheme_combobox"
	 width="150">
		<combo_box.item
		  label="Automatic"
		  name="automatic_color"
		  value="0">
		</combo_box.item>
		<combo_box.item
		  label="Release"
		  name="release_color"
		  value="1">
		</combo_box.item>
		<combo_box.item
		  label="Project"
		  name="project_color"
		  value="2">
		</combo_box.item>
		<combo_box.item
		  label="Beta"
		  name="beta_color"
		  value="3">
		</combo_box.item>
		<combo_box.item
		  label="Test"
		  name="test_color"
		  value="4">
		</combo_box.item>
	</combo_box>
</panel>
