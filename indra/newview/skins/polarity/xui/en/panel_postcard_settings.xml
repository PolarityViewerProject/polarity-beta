<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 height="380"
 layout="topleft"
 name="panel_postcard_settings"
 width="490">
	<combo_box
	 follows="left|top|right"
	 height="23"
	 label="Resolution"
	 layout="topleft"
	 left="5"
	 name="postcard_size_combo"
	 right="-3"
	 top_pad="5">
		<combo_box.item
		label="Current Window"
		name="CurrentWindow"
		value="[i0,i0]" />
		 <combo_box.item
		label="720p (16:9)"
		name="1280x720"
		value="[i1280,i720]" />
		 <combo_box.item
		label="1280x1024"
		name="1280x1024"
		value="[i1280,i1024]" />
		 <combo_box.item
		label="1080p (16:9)"
		name="1920x1080"
		value="[i1920,i1080]" />
		 <combo_box.item
		label="1600x1200"
		name="1600x1200"
		value="[i1600,i1200]" />
		 <combo_box.item
		label="4K 16:9 8.3MP"
		name="3840x2160"
		value="[i3840,i2160]" />
		 <combo_box.item
		label="4K 1.90:1 8.8MP"
		name="4096x2160"
		value="[i4096,i2160]" />
		 <combo_box.item
		label="4K 4:3 12.6MP"
		name="4096x3072"
		value="[i4096,i3072]" />
		 <combo_box.item
		label="8K 16:9 33.1MP"
		name="7680x4320"
		value="[i7680,i4320]" />
		 <combo_box.item
		label="Custom"
		name="Custom"
		value="[i-1,i-1]" />
	</combo_box>
  <spinner
	allow_text_entry="false"
	decimal_digits="0"
	follows="left|top"
	height="20"
	increment="32"
	label="Width x Height"
	label_width="90"
	layout="topleft"
	left="5"
	max_val="10240"
	min_val="32"
	name="postcard_snapshot_width"
	top_pad="5"
	width="144" />
  <spinner
	allow_text_entry="false"
	decimal_digits="0"
	follows="left|top"
	height="20"
	increment="32"
	label=""
	label_width="0"
	layout="topleft"
	left_pad="0"
	max_val="10240"
	min_val="32"
	name="postcard_snapshot_height"
	top_delta="0"
	width="52" />
  <check_box
	top_pad="12"
	follows="left|top"
	label="Constrain proportions"
	layout="topleft"
	left="5"
	name="postcard_keep_aspect_check" />
  <slider
  decimal_digits="0"
  follows="left|top"
  height="15"
  increment="1"
  initial_value="75"
  label="Quality:"
  label_width="45"
  layout="topleft"
  left="5"
  max_val="100"
  name="image_quality_slider"
  top_pad="6"
  width="190" />
</panel>
