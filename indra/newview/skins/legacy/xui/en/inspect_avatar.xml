<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<!--
 Not can_close / no title to avoid window chrome
 Single instance - only have one at a time, recycle it each spawn
-->
<floater
 legacy_header_height="25"
 bevel_style="in"
 bg_opaque_image="Inspector_Background"
 can_close="false"
 can_minimize="false"
 height="145"
 layout="topleft"
 name="inspect_avatar"
 single_instance="true"
 sound_flags="0"
 visible="true"
 width="259">
 <!-- Allowed fields include:
    [BORN_ON] ("12/3/2008")
    [SL_PROFILE] (Second Life profile),
    [RW_PROFILE] (real world profile),
    [ACCTTYPE] ("Resident"),
    [PAYMENTINFO] ("Payment Info on File"),
    [AGE] ("1 year 2 months")
  -->
 <string
  name="Subtitle">
[AGE]
 </string>
 <string
     name="Details">
 [SL_PROFILE]
    </string>
 <text
     follows="top|left"
     font="SansSerif"
     font.size="Small"
     font.style="Regular"
     height="25"
     left="2"
     name="user_name_small"
     parse_urls="false"
     top="2"
     text_color="White"
     translate="false"
     use_ellipses="true"
     word_wrap="true"
     visible="false"
     value="TestString1PleaseIgnoreIDoHaveA ReallyLongnameofsixtythreechars"
     width="200" />
  <text
    follows="top|left"
    font="SansSerifSmall"
    height="25"
    left="2"
    name="user_name"
    parse_urls="false"
    top="2"
    text_color="White"
    translate="false"
    use_ellipses="true"
    word_wrap="true"
    value="AReallyLongNameOfThirtyOneChars"
    visible="true"
    width="200" />
  <text
     follows="top|left"
     height="25"
     left="2"
     name="user_slid"
     font="Monospace"
     font.size="Small"
     font.style="BOLD"
     parse_urls="false"
     text_color="EmphasisColor"
     top_pad="0"
     translate="false"
     value="TestString1PleaseIgnoreIDoHaveA.ReallyLongnameofsixtythreechars"
     width="200"
     use_ellipses="true"
     word_wrap="true" />
    <text
     follows="top|left"
     height="16"
     left="2"
     name="user_subtitle"
     font="SansSerifSmall"
     text_color="White"
     top_pad="0"
     value="11 Months, 3 days old"
     width="175"
     use_ellipses="true" />
     <text
     follows="left|top|right"
     height="35"
     left="2"
     name="user_details"
     right="-3"
     word_wrap="true"
     top_pad="0"
     use_ellipses="true"
     width="220">
This is my second life description and I really think it is great. But for some reason my description is super extra long because I like to talk a whole lot
    </text>
    <slider
     follows="top|left"
     height="23"
     increment="0.01"
     left="2"
     max_val="0.95"
     min_val="0.05"
     name="volume_slider"
     right="-25"
     show_text="false"
     tool_tip="Voice volume"
     top_pad="0"
     value="0.5"
     width="220" />
    <button
     follows="top|left"
     height="19"
     right="-3"
     image_disabled="Audio_Off"
     image_disabled_selected="AudioMute_Off"
     image_hover_selected="AudioMute_Over"
     image_selected="AudioMute_Off"
     image_unselected="Audio_Off"
     is_toggle="true"
     left_pad="2"
     top_delta="2"
     name="mute_btn"
     width="19" />
    <text
     bottom="-2"
     follows="top|left"
     font="SansSerifSmall"
     height="16"
     left="2"
     name="agent_role"
     text_color="White"
     translate="false"
     value="Developer,Support,QA,Tester"
     width="150" />
    <text
     bottom="-1"
     follows="bottom|left"
     font="SansSerifSmall"
     height="16"
     left="220"
     name="avatar_profile_link"
     right="-2"
     text_color="White"
     translate="false"
     value="[[LINK] Profile]"
     width="10" />
    <avatar_icon
     follows="top|left"
     height="50"
     right="-2"
     mouse_opaque="true"
     name="avatar_icon"
     top="2"
     width="50" />
</floater>
